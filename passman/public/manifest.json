{
    "manifest_version": 3,
    "name": "PassMan - Secure Vault",
    "version": "1.0.0",
    "description": "A secure, local-only password manager with zero-knowledge architecture.",
    "permissions": [
        "storage",
        "unlimitedStorage",
        "clipboardWrite",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "src/popup/index.html"
    },
    "background": {
        "service_worker": "src/background/index.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content/index.js"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "icons/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}